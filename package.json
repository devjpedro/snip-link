    "ultracite": "5.3.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
