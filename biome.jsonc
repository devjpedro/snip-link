{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["**", "!**/db/migrations", "!**/*.sql", "!**/globals.css"]
  },
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "useAwait": "off"
      }
    }
  }
}
