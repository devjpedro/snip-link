echo "🔨 Building..."
if ! bun run build > build.log 2>&1; then
  echo "❌ Build falhou, commit cancelado."
  echo ""
  echo "📜 Log do erro:"
  echo "──────────────────────────────────────────────"
  cat build.log
  echo "──────────────────────────────────────────────"
  rm -f build.log
  exit 1
fi
rm -f build.log
